{
	"editor.rulers": [
		80
	],
	"editor.tabCompletion": "on",
	"editor.tabSize": 2,
	"javascript.format.semicolons": "insert",
	"editor.trimAutoWhitespace": true,
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"dist": false,
		"uploads": true,
		"node_modules": true,
		"logs": true,
		"scripts": true
	}
}
