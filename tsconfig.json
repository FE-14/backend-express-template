{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "esnext",
		"lib": [
			"es6",
		],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true
	},
	"compileOnSave": true,
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"types": [
		"typePatches"
	]
}